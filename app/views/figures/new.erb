<form action="/figures/new" method="POST">
  <label>New Figure Name:</label> <input type="text" name="figure[name]" id="figure_name">
  <br><br>
  <label>Titles:</label><br>
  <%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
      <%=title.name%>
    </input>
  <%end%>
  <br><br>
  <label>New Title:</label> <input type="text" name="title[name]" id="new_title">
  <br><br>
  <labe>Landmarks:</label><br>
  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>">
      <%=landmark.name%>
    </input>
  <%end%>
  <br><br>
  <label>New Landmark:</label> <input type="text" name="landmark[name]" id="new_landmark">
  <br><br>
  <input type="submit" id="submit" value="Create New Figure">
</form>
