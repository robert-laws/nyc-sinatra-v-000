<form action="" method="">
  <label>Figure Name:</label> <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>">
  <br><br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <%end%>
  <br><br>
  <label>New Title:</label> <input type="text" name="title[name]" id="new_title">
  <br><br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id%>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <%end%>
  <br><br>
  <label>New Landmark:</label> <input type="text" name="landmark[name]" id="new_landmark">
  <br><br>
  <input type="submit" id="submit" value="Edit Figure"
</form>
